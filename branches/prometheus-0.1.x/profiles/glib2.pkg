name="glib2"
version="2.4.4"
homepage="http://www.gtk.org"

archives=(
	"http://ftp.belnet.be/mirror/ftp.gnome.org/sources/glib/2.4/glib-${version}.tar.bz2"
)

dep="pkgconfig"

function build_pkg {
	# Get rid of the gettext dependency
	cp configure{,.orig}
	sed '/gettext.html/,/^fi/s/|{ (exit 1); exit 1; };||' \
		configure.orig > configure

	./configure --prefix=/usr &&
	make
}

function install_pkg {
	make install
}

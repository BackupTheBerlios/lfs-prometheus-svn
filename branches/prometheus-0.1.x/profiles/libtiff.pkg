name="libtiff"
version="3.6.1"
homepage="http://www.libtiff.org"

archives=(
	"ftp://ftp.remotesensing.org/pub/libtiff/tiff-v${version}.tar.gz"
)

dep=libjpeg

function build_pkg {
	./configure --prefix=/usr --noninteractive \
		--with-DIR_MAN=/usr/share/man --with-ZIP=yes --with-JPEG=yes \
		--with-DIR_JPEGLIB=/usr/lib --with-DIR_GZLIB=/usr/lib &&
	make
}

function install_pkg {
	make install
}

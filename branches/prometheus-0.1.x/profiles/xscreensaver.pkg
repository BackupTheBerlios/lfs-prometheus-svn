name=xscreensaver
version="4.16"
homepage="http://www.jwz.org/xscreensaver/"

archives=(
	"http://www.jwz.org/xscreensaver/xscreensaver-${version}.tar.gz"
)

dep="gtk2 libxml2 libjpeg"

function build_pkg {
	./configure --prefix=/usr/X11R6 --disable-nls &&
	make
}

function install_pkg {
	make install
}

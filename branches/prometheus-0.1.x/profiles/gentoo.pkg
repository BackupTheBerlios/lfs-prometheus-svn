name=Gentoo
version="0.11.51"
homepage="http://www.obsession.se/gentoo/"

archives=(
	"http://cesnet.dl.sourceforge.net/sourceforge/gentoo/gentoo-${version}.tar.gz"
)

dep=gtk1

function build_pkg {
	./configure --prefix=/usr --sysconfdir=/etc --disable-nls &&
	make
}

function install_pkg {
	make install
}

name="libtool"
version="1.5.22"
homepage="http://www.gnu.org/software/libtool/"

archives=(
	"ftp://ftp.cs.tu-berlin.de/pub/gnu/libtool/libtool-${version}.tar.gz"
)

function build_pkg {
	./configure --prefix=/usr
	make
}

function check_pkg {
	make check
}

function install_pkg {
	make install
	chown -R root:root /usr/share/libtool/libltdl
}

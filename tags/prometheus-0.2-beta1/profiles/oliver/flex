name="flex"
version="2.5.31"

archives=(
	"http://surfnet.dl.sourceforge.net/sourceforge/lex/flex-${version}.tar.bz2"
)

patches=(
	"http://www.linuxfromscratch.org/patches/downloads/flex/flex-${version}-debian_fixes-3.patch"
	"http://www.linuxfromscratch.org/patches/downloads/flex/flex-${version}-yytext_ptr-1.patch"
)

function stage1_build_pkg {
	touch doc/flex.1
	./configure --prefix=/tools
	make
}

function stage1_install_pkg {
	make install
}

function build_pkg {
	touch doc/flex.1
	./configure --prefix=/usr
	make
}

function check_pkg {
	make check
}

function install_pkg {
	make install
	ln -sf libfl.a /usr/lib/libl.a

	cat > /usr/bin/lex <<-"EOF"
	#!/bin/sh
	# Begin /usr/bin/lex

	exec /usr/bin/flex -l "$@"

	# End /usr/bin/lex
	EOF

	chmod 755 /usr/bin/lex
}

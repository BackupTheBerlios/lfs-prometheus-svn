name=udev
version="081"
homepage="http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html"

archives=(
	"http://www.de.kernel.org/pub/linux/utils/kernel/hotplug/udev-${version}.tar.bz2"
	"http://lfs-prometheus.berlios.de/download/25-lfs.rules"
)

archive_dirs=(
	""
	"@d"
)

function build_pkg {
	make EXTRAS=extras/run_directory
}

function check_pkg {
	make test
}

function install_pkg {
	make DESTDIR=/ EXTRAS=extras/run_directory install
	install -m644 -D docs/writing_udev_rules/index.html \
		/usr/share/doc/udev-${version}/index.html
	cp 25-lfs.rules /etc/udev/rules.d/
	/sbin/udevstart
}

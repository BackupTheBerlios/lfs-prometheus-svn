name=udev
version="062"
homepage="http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html"

archives=(
	"http://www.de.kernel.org/pub/linux/utils/kernel/hotplug/udev-${version}.tar.bz2"
	"http://lfs-prometheus.berlios.de/download/25-lfs.rules"
)

archive_dirs=(
	""
	"@d"
)

function build_pkg {
	make udevdir=/dev
}

function check_pkg {
	make test
}

function install_pkg {
	make udevdir=/dev install
	cp 25-lfs.rules /etc/udev/rules.d/
	/sbin/udevstart
}

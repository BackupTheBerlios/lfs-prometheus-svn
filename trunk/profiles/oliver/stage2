# This is the master profile for stage 2 of pure_lfs.

# Stage 2 is the final build, a.k.a. Chapter 6.

name="Stage 2"
version="6.1"
log_install=no

# Packages to install in stage 2 (in order).
pkglist=(
	users
	linux-libc-headers
	man-pages
	glibc
	re-adjusting
	binutils
	gcc
	coreutils
	iana-etc
	m4
	ncurses
	procps
	perl
	readline
	sed
	zlib
	autoconf
	automake
	bash
	bison
	bzip2
	diffutils
	e2fsprogs
	ed
	file
	findutils
	flex
	gawk
	gettext
	grep
	groff
	grub
	gzip
	hotplug
	inetutils
	install-log
	iproute2
	kbd
	less
	libtool
	make
	man
	mktemp
	module-init-tools
	net-tools
	patch
	procinfo
	prometheus
	psmisc
	shadow
	sysklogd
	sysvinit
	tar
	texinfo
	udev
	util-linux
	vim
	lfs-bootscripts
)

stage=2

function install_pkg {

	# Sanity checks.
	(( $(id -u) != 0 )) && error "${package}: stage 2 must be built as root"

	chown -R 0:0 /
	chown -R 15:15 /var/lib/prometheus

	# Critical symlinks
	ln -s /tools/bin/{cat,pwd,stty} /bin
	ln -s /tools/bin/perl /usr/bin
	ln -s /tools/lib/libgcc_s.so{,.1} /usr/lib

	# Devices
	mount -n -t tmpfs tmpfs /dev

	mknod -m 622 /dev/console c 5 1
	mknod -m 666 /dev/null c 1 3
	mknod -m 666 /dev/zero c 1 5
	mknod -m 666 /dev/ptmx c 5 2
	mknod -m 666 /dev/tty c 5 0
	mknod -m 444 /dev/random c 1 8
	mknod -m 444 /dev/urandom c 1 9
	chown 0:4 /dev/{console,ptmx,tty}

	ln -s /proc/self/fd /dev/fd
	ln -s /proc/self/fd/0 /dev/stdin
	ln -s /proc/self/fd/1 /dev/stdout
	ln -s /proc/self/fd/2 /dev/stderr
	ln -s /proc/kcore /dev/core

	mkdir /dev/pts
	mkdir /dev/shm
	mount -t devpts -o gid=4,mode=620 devpts /dev/pts
	mount -t tmpfs tmpfs /dev/shm


	# Install packages in pkglist.
	local pkg
	for pkg in "${pkglist[@]}"; do
		%PKGADD% --config "$config" --stage=2 "$pkg" ||
		error "${package}: could not install $pkg"
	done
}

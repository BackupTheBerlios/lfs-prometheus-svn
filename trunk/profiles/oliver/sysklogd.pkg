name="sysklogd"
version="1.4.1"
homepage="http://www.infodrom.org/projects/sysklogd"

archives=(
	"http://www.infodrom.org/projects/sysklogd/download/sysklogd-${version}.tar.gz"
)

patches=(
	"http://www.linuxfromscratch.org/patches/downloads/sysklogd/sysklogd-${version}-fixes-1.patch"
	"http://www.linuxfromscratch.org/patches/downloads/sysklogd/sysklogd-${version}-querymod-1.patch"
)

function build_pkg {
	make RPM_OPT_FLAGS="$CFLAGS"
}

function install_pkg {
	make install

	cat > /etc/syslog.conf <<-"EOF"
	# Begin /etc/syslog.conf

	auth,authpriv.* -/var/log/auth.log
	*.*;auth,authpriv.none -/var/log/sys.log
	daemon.* -/var/log/daemon.log
	kern.* -/var/log/kern.log
	mail.* -/var/log/mail.log
	user.* -/var/log/user.log
	*.emerg *

	# log the bootscript output:
	local2.* -/var/log/boot.log

	# End /etc/syslog.conf
	EOF
}

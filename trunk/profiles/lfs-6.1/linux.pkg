name="Linux Kernel"
version="2.6.10"
homepage="http://kernel.org"

archives=(
	"http://www.de.kernel.org/pub/linux/kernel/v2.6/linux-${version}.tar.bz2"
)

patches=(
	"http://www.acm.rpi.edu/~dilinger/patches/${version}/as6/patch-${version}-as6.gz"
	"http://www.13thfloor.at/patches/patch-2.6.4-bme0.04.diff.bz2"
)

archive_dirs="/usr/src"

leavefiles=yes

function install_pkg {
	chown -R 0:0 "${directory}"
	find . -name '*.rej' -exec rm {} \;
	find . -name '*~' -exec rm {} \;
	make mrproper
}

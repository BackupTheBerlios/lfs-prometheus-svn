name="psmisc"
version="21.5"

archives=(
	"http://download.sourceforge.net/psmisc/psmisc-${version}.tar.gz"
)

function build_pkg {
	./configure --prefix=/usr --exec-prefix="" # --disable-nls
	make
}

function install_pkg {
	make install
	mv /bin/pstree* /usr/bin
	ln -sf pstree /usr/bin/pstree.x11
}

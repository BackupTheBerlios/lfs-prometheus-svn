name=iproute2
version="2.6.11"
homepage="http://developer.osdl.org/dev/iproute2/"

archives=(
	"http://developer.osdl.org/dev/iproute2/download/iproute2-${version}-050330.tar.gz"
)

patches=(
	"http://www.linuxfromscratch.org/patches/downloads/iproute2/iproute2-${version}-050330-remove_db-1.patch"
)

directory="iproute2-${version}"

function build_pkg {
	./configure
	make SBINDIR=/sbin
}

function install_pkg {
	make SBINDIR=/sbin install
}

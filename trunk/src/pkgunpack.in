# Global prometheus functions.
source "%LIBPROMETHEUS%" || exit 1

# Usage: usage
# Print help text.
function usage {
	cat <<-EOF
Usage:
${0##*/} [<options>] <package_list>

For each package on the command line, extract the source code from its source
archives and apply the relevent patches.

Package list:
-f, --profile <profile> ...	Specify files containing package profiles
-p, --package <package> ...	Specify packages by name (default)
--				Treat remaining arguments as packages/profiles

Options (must precede package list):
-c, --config <config_file>	Specify alternative configuration file
-s, --stage <stage_number>	Specify stage 0, 1 or 2 (default = 2)

-h, -?, --help			Show this help screen
-v, --version			Show version information

	EOF
	finish
}

# --------------------------- START EXECUTION HERE --------------------------- #

# Check for options.
while [[ "$1" == -* ]]; do
	case "$1" in
		(-c|--config)			config="$2"
						shift ;;

		(--config=*)			config="${1#--config=}" ;;

		(-f|--profile|-p|--package)	break ;;

		(-h|-\?|--help)			usage ;;

		(-s|--stage)			set_stage "$2"
						shift ;;

		(--stage=*)			set_stage "${1#--stage=}" ;;

		(-v|--version)			version ;;

		(--)				shift
						break ;;

		(*)		script_usage_err "unrecognized option: $1"
	esac
	shift
done

source_config
find_profiles "$@"

# If there is more than one package, unpack each in its own instance.
if (( ${#profile_list[@]} > 1 )); then
	for profile in "${profile_list[@]}"; do
		# FIXME: Use package name in error msg.
		"$0" --config="$config" --stage=$stage --profile "$profile" ||
		error "could not unpack files listed in $profile"
	done
	finish
fi

